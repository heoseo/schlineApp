<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@color/colorPrimary"
            android:text="내 프로필"/>
        <!-- 안드로이드에서 선택한 이미지가 업로드 되기전 임시로 출력 -->
        <ImageView
            android:id="@+id/img_change"
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:layout_weight="1"
            android:layout_margin="20sp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/user" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/colorPrimary">
        <!-- 스프링 서버로 업로드 완료후 결과JSON을 받아 출력할 부분 -->
        <TextView
            android:id="@+id/tvHtml1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8D9FF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGetPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onBtnGetPicture"
            android:text="이미지 선택" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onBtnUpload"
            android:text="수정하기" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onBtnFinish"
            android:text="종료" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="닉네임 : "/>
        <EditText
            android:id="@+id/change_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="닉네임을 입력하세요"
            android:textColor="@color/black"/>
    </LinearLayout>
    <!--   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center">
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#E8D9FF"
               android:onClick="onBtnUpload"
               android:text="수정"/>
       </LinearLayout>-->
</LinearLayout>